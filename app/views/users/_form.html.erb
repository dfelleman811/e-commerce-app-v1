
<div class="container">

<%= form_with(model: user) do |form| %>

    <div class="form-group">
        <%= form.label :username, class: "form-label" %>
        <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :profile_image, class: "form-label"  %>
        <%= form.text_field :profile_image, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :role, class: "form-label"  %>
        <%= form.text_field :role, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.submit class: "form-control btn btn-sm btn-warning" %>
    </div>
<% end %>


</div>