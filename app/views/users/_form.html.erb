<%= form_with(model: user) do |form| %>

    <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.label :profile_image %>
        <%= form.text_field :profile_image %>
    </div>

    <div>
        <%= form.label :role %>
        <%= form.text_field :role %>
    </div>

    <%= form.submit %>

<% end %>